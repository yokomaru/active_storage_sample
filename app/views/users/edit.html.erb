<h1>Add User</h1>

<%= form_with model: @user, local: true do |form| %>

  <%= render 'shared/error_messages', model: form.object %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :avatar %>
      <% if @user.avatar.present? %>
        <%= image_tag @user.avatar.variant(:edit_page) %>
      <% end %>
    <%= form.file_field :avatar , accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
