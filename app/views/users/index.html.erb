<h1>Users Index</h1>
<%= link_to 'Add user', new_user_path %>

<ul>
  <% @users.each do |user| %>
    <li>
      <p><%= user.name %></p>
      <% if user.avatar.present? %>
      <%= image_tag user.avatar.variant(:thumb) %>
      <% end %>
      <p><%= link_to "編集画面", edit_user_path(user) %> |</p>
    </li>
  <% end %>
</ul>
